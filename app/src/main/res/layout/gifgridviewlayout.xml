<RelativeLayout

    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout

        android:id="@+id/gifviewpagli"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <LinearLayout
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton

                android:id="@+id/emojis_keyboard_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/openkeybord"
                android:minWidth="38dp"
                android:scaleType="center"
                android:src="@drawable/ic_action_keyboard" />
            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/categoriesrec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

            <RelativeLayout

                android:id="@+id/settingsli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@color/black">

                <ImageView
                    android:id="@+id/settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"

                    android:layout_marginBottom="10dp"
                    android:foregroundGravity="bottom"
                    android:padding="10dp"
                    android:src="@drawable/exo_ic_settings">

                </ImageView>

            </RelativeLayout>

        </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/subcatrec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/gridlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">

        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>

    <ProgressBar
        android:visibility="gone"
       android:padding="150dp"
        android:id="@+id/progresbarfull"
        android:layout_width="50dp"
        android:layout_height="50dp">

    </ProgressBar>

</RelativeLayout>

